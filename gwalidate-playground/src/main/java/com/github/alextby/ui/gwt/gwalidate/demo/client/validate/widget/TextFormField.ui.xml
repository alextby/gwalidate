<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel ui:field="wrapper" styleName="control-group">

        <g:Label ui:field="label" styleName="control-label"/>
        <div class="controls">
            <g:TextBox ui:field="input" styleName="input-medium"/>
            <span ui:field="help" class="help-inline"/>
        </div>
        <!-- keeps the validation config -->
        <g:FlowPanel ui:field="vKeeper" visible="false"/>

    </g:HTMLPanel>

</ui:UiBinder>
