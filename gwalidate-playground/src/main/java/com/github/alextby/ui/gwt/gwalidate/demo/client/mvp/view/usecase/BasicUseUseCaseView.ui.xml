<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:demo="urn:import:com.github.alextby.ui.gwt.gwalidate.demo.client.validate.widget"
             xmlns:v="urn:import:com.github.alextby.ui.gwt.gwalidate.core.dom"
             xmlns:vpanel="urn:import:com.github.alextby.ui.gwt.gwalidate.core.engine">


    <g:HTMLPanel>

        <div class="row-fluid">

            <g:HTMLPanel addStyleNames="left-help-panel pull-left">

                <div class="alert alert-info">
                    <h3>Case Description</h3>
                    <p>The purpose of this use case is to give a good feeling of what GWalidator actully does.</p>
                    <p>
                      The form on the right contains 2 fields:<br/>
                        <ul>
                          <li>Required name field with the maximum allowed length = 10</li>
                          <li>optional age field with the [0, 100) allowed integer interval</li>
                        </ul>
                    </p>
                    <p>
                       Click the "Validate" button in order to check the inputs.
                    </p>

                </div>

            </g:HTMLPanel>

            <vpanel:ValidationPanel ui:field="validationPanel" styleName="validation-panel pull-left">

                <g:FormPanel styleName="bs-docs-example form-inline form-horizontal">

                    <g:HTMLPanel tag="fieldset">

                        <demo:TextFormField ui:field="firstField" label="Name" required="true" placeholder="required">
                            <v:Size max="10"/>
                        </demo:TextFormField>

                        <demo:TextFormField ui:field="secondField" label="Age" placeholder="optional">
                            <v:Range min="0" max="100"/>
                        </demo:TextFormField>

                        <div class="controls">
                            <g:SubmitButton styleName="btn btn-success" ui:field="validateBtn">Validate</g:SubmitButton>
                        </div>

                    </g:HTMLPanel>

                </g:FormPanel>

            </vpanel:ValidationPanel>

        </div>

    </g:HTMLPanel>

</ui:UiBinder>
