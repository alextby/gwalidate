<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:bs="urn:import:com.github.gwtbootstrap.client.ui"
        >

    <g:HTMLPanel addStyleNames="controls">

        <div class="row">
            <div class="span3">
                <bs:SubmitButton ui:field="validateBtn" type="PRIMARY" size="LARGE">Validate</bs:SubmitButton>
            </div>
            <div>
                <bs:Button ui:field="nullifyBtn" type="INFO" size="LARGE">Nullify</bs:Button>
                <bs:Button ui:field="hardRescanBtn" type="INFO" size="LARGE">Hard Rescan</bs:Button>
                <bs:Button ui:field="rescanBtn" type="INFO" size="LARGE">Rescan</bs:Button>
            </div>
        </div>

    </g:HTMLPanel>

</ui:UiBinder>